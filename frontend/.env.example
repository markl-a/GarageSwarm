# ============================================================================
# Multi-Agent System - Frontend Configuration (Flutter)
# ============================================================================
# Copy this file to .env and update the values for your environment
# This file is used for Flutter web/mobile application configuration
# ============================================================================

# ----------------------------------------------------------------------------
# Backend API Configuration
# ----------------------------------------------------------------------------
# Base URL for REST API endpoints
# Development: http://localhost:8000/api/v1
# Production: https://your-api-domain.com/api/v1
API_BASE_URL=http://localhost:8000/api/v1

# Base URL for WebSocket connections
# Development: ws://localhost:8000/api/v1/ws
# Production: wss://your-api-domain.com/api/v1/ws
WS_BASE_URL=ws://localhost:8000/api/v1/ws

# Alternative backend port (if using docker-compose, backend is on port 8002)
# API_BASE_URL=http://localhost:8002/api/v1
# WS_BASE_URL=ws://localhost:8002/api/v1/ws

# ----------------------------------------------------------------------------
# Environment Settings
# ----------------------------------------------------------------------------
# Application environment (development, staging, production)
ENVIRONMENT=development

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
# Enable debug mode (shows detailed error messages)
DEBUG_MODE=true

# API request timeout in seconds
API_TIMEOUT=30

# WebSocket reconnection settings
WS_RECONNECT_ENABLED=true
WS_RECONNECT_INTERVAL=5
WS_MAX_RECONNECT_ATTEMPTS=10

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Enable console logging
ENABLE_LOGGING=true

# Log level (debug, info, warning, error)
LOG_LEVEL=debug

# ----------------------------------------------------------------------------
# Feature Flags (Optional)
# ----------------------------------------------------------------------------
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# ----------------------------------------------------------------------------
# UI Configuration (Optional)
# ----------------------------------------------------------------------------
# Default theme (light, dark, system)
DEFAULT_THEME=system

# Default language (en, zh-TW, zh-CN, etc.)
DEFAULT_LANGUAGE=en
